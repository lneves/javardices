#!/bin/sh

cd $(dirname $0)

wd=$(pwd)

java -server \
-Xverify:none -Xms16M -Xmx128M \
-Djava.awt.headless=true \
-Djava.net.preferIPv4Stack=true \
-Djava.net.preferIPv6Addresses=false \
-Dfile.encoding=UTF-8 \
-cp "./conf:./lib/*:./bin" \
org.caudexorigo.twitter.search.Main --port 8080 --root-directory "$wd/wwwroot"
